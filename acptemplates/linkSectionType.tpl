{include file='multipleLanguageInputJavascript' elementIdentifier='sectionData' forceSelection=false}
<dl>
	<dt><label for="type">{lang}cms.acp.content.section.data.type{/lang}</label></dt>
	<dd>
		<select id="type" name="type">
			<option value="0" {if $type == '0'}selected="selected"{/if}>{lang}cms.acp.content.section.data.normal{/lang}</option>
			<option value="1" {if $type == '1'}selected="selected"{/if}>{lang}cms.acp.content.section.data.button{/lang}</option>
			<option value="2" {if $type == '2'}selected="selected"{/if}>{lang}cms.acp.content.section.data.buttonsmall{/lang}</option>
		</select>
	</dd>
</dl>
<dl>
    <dt><label for="sectionData">{lang}cms.acp.content.section.data.headline{/lang}</label></dt>
    <dd>
		<input type="text" name="sectionData" id="sectionData" class="long" value="{$i18nPlainValues['sectionData']}" required="required" />
    </dd>
</dl>

<dl>
    <dt><label for="hyperlink">{lang}cms.acp.content.section.data.hyperlink{/lang}</label></dt>
    <dd>
		<input type="text" name="hyperlink" id="hyperlink" class="long" value="{$hyperlink}" required="required" />
    </dd>
</dl>